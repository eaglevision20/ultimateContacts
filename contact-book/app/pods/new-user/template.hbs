<div class="new-user">
  <h1>Create an Account</h1>
  <hr>
  <div class="left">
    <div>
      <label class="">First Name</label>
      <div class="">
        {{input type="text" class="input" placeholder="" value=firstName }}
      </div>
    </div>
    <div>
      <label class="">Phone Number</label>
      <div class="">
        {{input type="text" class="input" placeholder="" value=phoneNumber }}
      </div>
    </div>
    <div>
      <label class="">Password</label>
      <div class="">
        {{input type="password" class="input" placeholder="" value=password }}
      </div>
    </div>
  </div>
  <div class="right">
    <div>
      <label class="">Last Name</label>
      <div class="">
        {{input type="text" class="input" placeholder="" value=lastName }}
      </div>
    </div>
    <div>
      <label class="">Email Address</label>
      <div class="">
        {{input type="text" class="input" placeholder="" value=email }}
      </div>
    </div>
    <div>
      <label class="">Verify Password</label>
      <div class="">
        {{input type="password" class="input" placeholder="" value=verifyPW }}
      </div>
    </div>
  </div>
  <div class="clear"></div>
  <div class="bottom">
    {{#if formErrors}}
      <h2>Please Fix the following errors</h2>
    {{/if}}
    {{#each formErrors as |error|}}
      <h4>{{error}}</h4>
    {{/each}}
    <button {{action 'createUser'}}>Create My Account</button>
  </div>
</div>